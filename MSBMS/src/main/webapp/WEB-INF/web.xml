<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

    <filter>
        <filter-name>characterFilter</filter-name>
        <filter-class>cn.cen.filter.CharacterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>characterFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>SysFilter</filter-name>
        <filter-class>cn.cen.filter.SysFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SysFilter</filter-name>
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SysFilter</filter-name>
        <url-pattern>/useradd</url-pattern>
    </filter-mapping>


    <welcome-file-list>
        <welcome-file>/login.jsp</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>


    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>cn.cen.servlet.user.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>cn.cen.servlet.user.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>cn.cen.servlet.user.userServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserList</servlet-name>
        <servlet-class>cn.cen.servlet.user.userListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserList</servlet-name>
        <url-pattern>/userlist</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserAdd</servlet-name>
        <servlet-class>cn.cen.servlet.user.UserAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserAdd</servlet-name>
        <url-pattern>/useradd</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserDel</servlet-name>
        <servlet-class>cn.cen.servlet.user.UserDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserDel</servlet-name>
        <url-pattern>/userdel</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BillServlet</servlet-name>
        <servlet-class>cn.cen.servlet.bill.BillServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BillServlet</servlet-name>
        <url-pattern>/bill.do</url-pattern>
    </servlet-mapping>
    
</web-app>
